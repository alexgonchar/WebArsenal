@model IList<Nop.Web.Models.Catalog.ProductModel>
@{
    Layout = "~/Views/Shared/_ColumnsThree.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyAddedProducts").Text);
}
@using Nop.Core;
@using Nop.Core.Infrastructure;
@using Nop.Web.Framework.UI;
@using Nop.Web.Models.Catalog;
@using Nop.Web.Views
<div class="recently-added-products">
    <div class="row-fluid show-grid">
        <div class="span12">
            <div class="page-title">
                <table style="width: 100%;">
                    <tr>
                        <td class="title">
                            <h1>@T("Products.NewProducts")</h1>
                        </td>
                        <td class="rss"><a href="@Url.RouteUrl("RecentlyAddedProductsRSS")">
                            <img title="@T("Products.NewProducts.RSS.Hint")" src="@Url.Content("~/content/images/icon_rss.gif")" alt="@T("Products.NewProducts.RSS")" />
                        </a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    @*product list*@
    @if (Model.Count > 0)
    {
        <div class="row-fluid show-grid product-grid">
            <div class="span12">
                @(Html.DataListOnDivs<ProductModel>(Model, ViewConstants.ColumnMinWidth,
                                         @<div class="item-box">
                                             @Html.Partial("_ProductBox", @item)
                                         </div>
           ))
            </div>
        </div>
        
    }
</div>
