@model HomePageProductsModel
@using Nop.Web.Framework.UI;
@using Nop.Web.Models.Catalog;
@using Nop.Web.Views;
@if (Model.Products.Count > 0)
{
    <div class="row-fluid show-grid product-grid home-page-product-grid">
        <div class="span12">
        <div class="title">
            @T("HomePage.Products")
        </div>
        @if (Model.UseSmallProductBox)
        {
            @(Html.DataListOnDivs<ProductModel>(Model.Products, ViewConstants.ColumnMinWidth,
                                                     @<div class="item-box">
                                                          @Html.Partial("_ProductSmallBox", @item)
                                                      </div>
                       ))
        }
        else
        {
            @(Html.DataListOnDivs<ProductModel>(Model.Products, ViewConstants.ColumnMinWidth,
                                                     @<div class="item-box">
                                                          @Html.Partial("_ProductBox", @item)
                                                      </div>
                       ))
        }
    </div>
    </div>
}